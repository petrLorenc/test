<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!--For main Activity-->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".NavigationDrawerTest">
        <fragment
            android:name="cz.united121.android.testpupose.BlankFragment"
            android:id="@+id/fragment1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </fragment>
        <fragment
            android:name="cz.united121.android.testpupose.BlankFragment2"
            android:id="@+id/fragment2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </fragment>
    </FrameLayout>

    <!--For main Menu-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="start">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@color/switch_thumb_normal_material_dark"
            android:layout_weight="3"/>
        <ListView
            android:id="@+id/navList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>